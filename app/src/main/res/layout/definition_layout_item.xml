<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/definition_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definition : "
            android:textColor="#3F51B5"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/definition_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#252323"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/synonyms_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Synonyms : "
            android:textColor="#E91E63"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/synonyms_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#252323"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/antonyms_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Antonyms : "
            android:textColor="#FF9800"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/antonyms_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#252323"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>